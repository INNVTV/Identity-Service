@page
@model IdentityService.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="form-group col-xl-4 offset-xl-4 col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-12">

    <h2>Sign In</h2>
  
    @if (!String.IsNullOrEmpty(ViewData["Message"].ToString()))
    {
        <p class="text-danger" style="margin-top:10px; margin-bottom:5px;"><i style="color:orange; margin-right:2px;" class="fas fa-exclamation-triangle"></i> <strong>@ViewData["Message"]</strong></p>
    }

    <form method="post">

        <div class="form-group">
            <label class="control-label">Username/Email</label>
            <input class="form-control" asp-for="AuthenticateUser.UserNameOrEmail" placeholder="Username or Email Address" />
        </div>

        <div class="form-group">
            <label asp-for="AuthenticateUser.Password" class="control-label"></label>
            <input type="password" class="form-control" asp-for="AuthenticateUser.Password" value="@Model.AuthenticateUser.Password" placeholder="Password" />
        </div>

        <div class="form-group">
            <button class="btn btn-primary btn-block btn-lg">Sign In</button>
        </div>

        <div class="form-group">
            <a href="">Forgot your password?</a>
            <br />
            <a href="">Request an account</a>
            <br />
        </div>

    </form>
</div>