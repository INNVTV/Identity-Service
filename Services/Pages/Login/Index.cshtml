@page
@model IdentityService.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<p>Login to your account</p>

@if(!String.IsNullOrEmpty(ViewData["Message"].ToString()))
{
<div class="alert alert-danger">@ViewData["Message"]</div>
}

<div class="form-group">
    <form method="post">

        <div class="form-group">
            <label style="font-weight:bold" asp-for="AuthenticateUser.UserNameOrEmail" class="control-label"></label>
            <input class="form-control" asp-for="AuthenticateUser.UserNameOrEmail" placeholder="Username or Email Address" />
        </div>

        <div class="form-group">
            <label style="font-weight:bold" asp-for="AuthenticateUser.Password" class="control-label"></label>
            <input type="password" class="form-control" asp-for="AuthenticateUser.Password" value="@Model.AuthenticateUser.Password" placeholder="Password" />           
        </div>

        <div class="form-group" style="text-align:right">
            <button class="btn btn-primary btn-lg">Login</button>
        </div>

    </form>
</div>